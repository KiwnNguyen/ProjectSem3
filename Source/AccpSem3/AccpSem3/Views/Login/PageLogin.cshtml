@model AccpSem3.Models.ModeView.MemberView
@{
    ViewBag.Title = "PageLogin";


}
<!-- / menu -->

<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>
                                <form action="/Login/PageLogin1" class="aa-login-form" method="post">
                                    <div class="form-group">
                                        <label for="">Username or Email address<span>*</span></label>
                                        <input type="text" class="form-control" placeholder="Username or email" name="Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Password<span>*</span></label>
                                        <input type="password" class="form-control" placeholder="Password" name="Pass">
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-primary" style="display: block; margin: 0 auto;">Login</button>
                                    @*<p class="aa-lost-password"><a href="#">Lost your password?</a></p>*@
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Register</h4>
                                @if (HttpContext.Current.Session["infoAccount"] != null)
                                {
                                    if (HttpContext.Current.Session["infoAccount"].Equals("Register Success"))
                                    {
                                        <h4 style="color:green">@HttpContext.Current.Session["infoAccount"]</h4>
                                    }
                                    if (HttpContext.Current.Session["infoAccount"].Equals("Register Failer"))
                                    {
                                        <h4 style="color:red">@HttpContext.Current.Session["infoAccount"]</h4>
                                    }
                                }
                                @if (HttpContext.Current.Session["infoAccount1"] != null)
                                {
                                    if (HttpContext.Current.Session["infoAccount1"].Equals("Confirm password false"))
                                    {
                                        <h4 style="color:red">@HttpContext.Current.Session["infoAccount1"]</h4>
                                    }
                                }
                            <form action="/Home/RegisterAccount" method="post" class="aa-login-form">
                                <div class="form-group">
                                    <label for="">Full Name<span>*</span></label>
                                    <input type="text" placeholder="Full Your Name" class="form-control" name="fullname" value="@Model.fullname">
                                </div>
                                <div class="form-group">
                                    <label for="">Email<span>*</span></label>
                                    <input type="text" placeholder="Email" class="form-control" value="@Model.email" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="">Password<span>*</span></label>
                                    <input type="password" class="form-control" value="@Model.password" name="password">
                                </div>
                                <div class="form-group">
                                    <label for="">Confirm Password<span>*</span></label>
                                    <input type="password" class="form-control"  value="" name="confirmPass">
                                </div>
                                <div class="form-group">
                                    <label for="">Personal</label>
                                    <input type="text" class="form-control" placeholder="Your Personal" value="@Model.personal_detail" name="personal_detail">
                                </div>
                                <div class="form-group">
                                    <label for="">Education<span></span></label>
                                    <input type="text" class="form-control" placeholder="Your Education" value="@Model.education_details" name="education_details">
                                </div>
                                <div class="form-group">
                                    <label for="">Work experience<span></span></label>
                                    <input type="text" class="form-control" placeholder="Your Work Experience" value="@Model.work_experience" name="work_experience">
                                </div>
                                @if (HttpContext.Current.Session["infoAccount2"] != null)
                                {
                                    if (HttpContext.Current.Session["infoAccount2"].Equals("Please Number Phone Is Length 10"))
                                    {
                                        <h4 style="color:red">@HttpContext.Current.Session["infoAccount2"]</h4>
                                    }
                                }
                                <div class="form-group">
                                    <label for="">Phone</label>
                                    <input type="number" class="form-control" placeholder="Your Phone Number" value="@Model.phone" name="phone">
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary" style="display: block; margin-left: auto;">Register</button>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
<!-- footer -->
<!-- / footer -->
<!-- Login Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Login or Register</h4>
                <form class="aa-login-form" action="">
                    <label for="">Username or Email address<span>*</span></label>
                    <input type="text" placeholder="Username or email">
                    <label for="">Password<span>*</span></label>
                    <input type="password" placeholder="Password">
                    <button class="aa-browse-btn" type="submit">Login</button>
                    <label for="rememberme" class="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                    <p class="aa-lost-password"><a href="#">Lost your password?</a></p>
                    <div class="aa-register-now">
                        Don't have an account?<a href="account.html">Register now!</a>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>



