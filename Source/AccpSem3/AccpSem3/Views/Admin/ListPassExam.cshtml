
@{
    ViewBag.Title = "ListPassExam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int c = 1;
}

@section head{
    <link href="~/Content/Assets/Admin/tb/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Admin/tb/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Admin/tb/assets/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <!-- PLUGINS STYLES-->
    <link href="~/Content/Assets/Admin/tb/assets/vendors/DataTables/datatables.min.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <!--<link href="~/Content/Assets/Admin/tb/assets/css/main.min.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}


<main class="content-wrapper">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
            <div class="mdc-card">
                <div class="ibox">
                    <div class="ibox-head">
                        <h2 class="ibox-title">LIST CANDIDATE PASS EXAM</h2>
                    </div>
                    <div class="ibox-body">
                        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-left">#</th>
                                    <th style="text-align: center">Full Name</th>
                                    <th style="text-align: center">Job</th>
                                    <th style="text-align: center">Score Exam</th>
                                    <th style="text-align: center">Agree</th>
                                    <th style="text-align: center">Status</th>
                                    <th style="text-align: center">Refuse</th>
                                    <th style="text-align: center">Set Interview</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.lstPE)
                                {
                                    <tr>
                                        <td class="text-left">@c</td>
                                        <td style="text-align: center">@item.fullname</td>
                                        <td style="text-align: center">@item.title_vacancy</td>
                                        <td style="text-align: center">@item.score</td>
                                        <td style="text-align: center">
                                            @if (item.status == 0)
                                            {
                                                <a class="button-with-icon" id="ViewDetailsVan">
                                                    <i class="fa-solid fa-street-view"></i><!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            @if (item.status == 5)
                                            {
                                                <a class="button-with-icon" id="" href="@Url.Action("PageStatus7","Admin",new {id =item.id})">
                                                    <i class="fa-solid fa-check" style="color:green"></i><!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            @if (item.status == 6 || item.status == 7 || item.status == 8)
                                            {
                                                <a class="button-with-icon" id="ViewDetailsVan">
                                                    <i class="fa-solid fa-check"></i><!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                        </td>
                                        <td style="text-align: center">
                                            @if (item.status == 0)
                                            {
                                                <p>Đã hoàn thành bài test</p>

                                            }
                                            @if (item.status == 9)
                                            {
                                                <p>Đang xem xét</p>
                                            }
                                            @if (item.status == 5)
                                            {
                                                <p>Đồng ý lên lịch</p>
                                            }
                                            @if (item.status == 6)
                                            {
                                                <p>Từ chối lên lịch</p>
                                            }
                                            @if (item.status == 7)
                                            {
                                                <p>Được chọn</p>
                                            }
                                            @if (item.status == 8)
                                            {
                                                <p>Không được chọn</p>
                                            }
                                        </td>
                                        <td style="text-align: center">
                                            @if (item.status == 0)
                                            {
                                                <a class="button-with-icon" id="" href="@Url.Action("PageStatus9","Admin",new {id = item.id})">
                                                    <i class="fa-solid fa-street-view"></i><!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            @if (item.status == 9)
                                            {
                                                <a class="button-with-icon" id="" href="@Url.Action("PageStatus6","Admin",new {id = item.id})">
                                                    <i class="fa-solid fa-x" style="color:orangered"></i> <!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            @if (item.status == 5)
                                            {
                                                <a class="button-with-icon" id="" href="@Url.Action("PageStatus8","Admin",new {id = item.id})">
                                                    <i class="fa-solid fa-x" style="color:red"></i> <!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            @if (item.status == 6 || item.status == 7 || item.status == 8)
                                            {
                                                <a class="button-with-icon" id="ViewDetailsVan">
                                                    <i class="fa-solid fa-x"></i><!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                        </td>
                                        <td style="text-align: center">
                                            @if (item.status == 9)
                                            {
                                                <a class="button-with-icon" id="" href="@Url.Action("DetailsCandidate","Admin",new {id = item.id})">
                                                    <i class="fa-solid fa-pen-to-square"></i> <!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="button-with-icon" id="ViewDetailsVan">
                                                    <i class="fa-solid fa-pen-to-square"></i> <!-- Biểu tượng cho trạng thái Bật -->
                                                </a>
                                            }

                                        </td>
                                    </tr>
                                    c++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>


@section scripts{
    <script src="~/Content/Assets/Admin/tb/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/metisMenu/dist/metisMenu.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS-->
    <script src="~/Content/Assets/Admin/tb/assets/vendors/DataTables/datatables.min.js" type="text/javascript"></script>
    <!-- CORE SCRIPTS-->
    <script src="~/Content/Assets/Admin/tb/assets/js/app.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL SCRIPTS-->
    <script type="text/javascript">
        $(function () {
            $('#example-table').DataTable({
                pageLength: 10,
            });
        })
    </script>
}
